{% extends 'base.html.twig' %}

{% block title %}Gestion{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <h1 class="text-center my-5">Gestion des cartes YU-GI-OH!</h1>
    </div>
    {# Link to card form #}
    <a href="{{ path('app_card') }}" class="btn btn-primary">Ajouter</a>
    
    {# Table #}
    <div class="row mt-2">
        <table class="col-12 table table-hover table-responsive text-center table-bordered border-black align-middle">
            <thead>
                <tr class="table-dark border-black">
                    <th scope="col">Nom</th>
                    <th scope="col">Référence</th>
                    <th scope="col">Rareté</th>
                    <th scope="col">Prix</th>
                    <th scope="col">Date</th>
                    <th scope="col">Qualité</th>
                    <th scope="col">Nombre</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody class="table-group-divider">
                {% if cards|length == 0 %}
                    <tr><td>Il n'y a pas de carte.</td></tr>
                    {% else %}
                    {% for card in cards %}
                    {% if 'bonne' in card.quality %}
                        {% set qualityBg = 'text-bg-success' %}
                    {% endif %}
                    {% if 'usé' in card.quality %}
                        {% set qualityBg = 'text-bg-warning' %}
                    {% endif %}
                    {% if card.number > 1 %}
                        {% set rowBg = 'table-info border-black' %}
                        {% else %}
                            {% set rowBg = 'table-white' %}
                    {% endif %}
                    
                        <tr class="{{ rowBg }}">
                            <td>{{ card.name }}</td>
                            <td>{{ card.reference }}</td>
                            <td>{{ card.rarity.name }}</td>
                            <td>{{ card.price }} €</td>
                            <td>{{ card.date|date('d/m/Y') }}</td>
                            <td class="{{ qualityBg }}">{{ card.quality }}</td>
                            <td>{{ card.number }}</td>
                            <td>
                                <a href="{{ path('app_card_update', {id: card.id}) }}" class="btn btn-primary">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil" viewBox="0 0 16 16">
                                    <path d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325"/>
                                    </svg>
                                </a>
                                <a href="{{ path('delete_card', {id: card.id}) }}" class="btn btn-danger">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                                    <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0z"/>
                                    <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4zM2.5 3h11V2h-11z"/>
                                    </svg>
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                {% endif %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}