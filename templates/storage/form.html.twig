{% if storageId %}
    {{ form_start(form, {method: 'POST', action: path('app_storage_edit', {storageId: storageId}), attr: {'id': 'modalForm', class: 'row'}}) }}
{% else %}
    {{ form_start(form, {method: 'POST', action: path('app_storage_add'), attr: {'id': 'modalForm', class: 'row'}}) }}
{% endif %}
    <div class="col-12 mb-3">
        {{ form_row(form.name) }}
    </div>
    <div class="col-6 mb-3">
        {{ form_row(form.storageType) }}
    </div>
    <div class="col-6 mb-3">
        {{ form_row(form.capacity) }}
    </div>
    {% if storageId %}
        <div class="col-12 mb-3">
            {{ form_row(form.full) }}
        </div>
    {% endif %}
{{ form_end(form) }}