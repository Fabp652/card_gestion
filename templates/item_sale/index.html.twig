{% extends 'base.html.twig' %}
{% block head %}
    {{ knp_pagination_rel_links(itemSales) }}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('select2') }}
{% endblock %}

{% block title %}Ventes{% endblock %}

{% block body %}
    {{ parent() }}
    <div class="container mt-5 pt-5" data-controller="modal">
        <div class="card px-5">
            <div class="card-header border-bottom-0 bg-white pb-0">
                <h1 class="text-center mb-5 fw-bold">VENTES</h1>
            </div>
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col d-flex p-0">
                        <button 
                            type="button"
                            class="btn btn-primary showModal"
                            id="showModal"
                            data-url="{{ absolute_url(path('app_item_sale_new')) }}"
                            data-title="Nouvelle en vente"
                        >
                            Nouvelle vente
                        </button>
                    </div>
                </div>
                <div class="row">
                    <table class="col-12 table table-hover table-responsive text-center table-bordered border-black align-middle">
                        <thead class="table-dark border-dark">
                            <tr>
                                <th class="w-50">{{ knp_pagination_sortable(itemSales, 'Nom', 'is.name', {class: 'link-light link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover'}) }}</th>
                                <th>{{ knp_pagination_sortable(itemSales, 'Price', 'is.price', {class: 'link-light link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover'}) }}</th>
                                <th>Vendu</th>
                                <th>Lien</th>
                                <th>Action</th>
                            </tr>
                            <tr>
                                <form data-controller="item" id="formFilter" action="{{ absolute_url(path('app_item_sale_list')) }}" method="get">
                                    {% set filterQuery = request.query.all('filter') %}
                                    <th><input id="nameFilter" name="filter[name]" class="form-control rounded-0" type="text" value="{{ filterQuery.name ?? '' }}"></th>
                                    <th class="input-group">
                                        <input type="number" id="minPriceFilter" name="filter[min_price]" class="form-control rounded-0 border-black" placeholder="Min" value="{{ filterQuery.min_price ?? '' }}">
                                        <input type="number" id="maxPriceFilter" name="filter[max_price]" class="form-control rounded-0 border-black" placeholder="Max" value="{{ filterQuery.max_price ?? '' }}">
                                    </th>
                                    <th>
                                        <select id="soldFilter" name="filter[sold]" class="form-select rounded-0">
                                            <option value="">---</option>
                                            <option
                                                value="0"
                                                {% if filterQuery.sold is defined and filterQuery.sold == 0 %}
                                                    selected
                                                {% endif %}
                                            >
                                                Non vendu
                                            </option>
                                            <option
                                                value="1"
                                                {% if filterQuery.sold is defined and filterQuery.sold == 1 %}
                                                    selected
                                                {% endif %}
                                            >
                                                Vendu
                                            </option>
                                        </select>
                                    </th>
                                    <th></th>
                                    <th>
                                        <a href="{{ path('app_item_sale_list') }}" class="btn btn-secondary btn-sm rounded-0">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-x-lg" viewBox="0 0 16 16">
                                                <path d="M2.146 2.854a.5.5 0 1 1 .708-.708L8 7.293l5.146-5.147a.5.5 0 0 1 .708.708L8.707 8l5.147 5.146a.5.5 0 0 1-.708.708L8 8.707l-5.146 5.147a.5.5 0 0 1-.708-.708L7.293 8z"/>
                                            </svg>
                                        </a>
                                    </th>
                                </form>
                            </tr>
                        </thead>
                        <tbody class="table-group-divider">
                            {% for itemSale in itemSales %}
                                <tr>
                                    <td>{{ itemSale.name }}</td>
                                    <td>{{ itemSale.price|format_currency('EUR', locale='fr') }}</td>
                                    <td>{{ itemSale.sold ? 'Vendu' : 'Non vendu' }}</td>
                                    <td>{{ itemSale.link }}</td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a class="btn btn-outline-primary btn-sm" href="{{ path('app_item_sale_view', {itemSaleId: itemSale.id}) }}">
                                                <i class="fa-solid fa-eye"></i>
                                            </a>
                                            <button
                                                data-url="{{ absolute_url(path('app_item_sale_edit', {itemSaleId: itemSale.id})) }}"
                                                data-title="{{ 'Modifier "' ~ itemSale.name ~ '"' }}"
                                                class="btn btn-primary btn-sm showModal"
                                            >
                                                <i class="fa-solid fa-pen"></i>
                                            </button>
                                            <a href="{{ path('app_item_sale_delete', {itemSaleId: itemSale.id}) }}" class="btn btn-danger btn-sm">
                                                <i class="fa-solid fa-trash-can"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            {% else %}
                                <tr><td colspan="9">Il n'y a pas de Vente.</td></tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
                <div class="navigation">
                    {{ knp_pagination_render(itemSales) }}
                </div>
            </div>
        </div>
    </div>
    {% include "Modal/modal.html.twig" %}
{% endblock %}
