{% if itemId %}
    {{ form_start(form, {method: 'POST', action: path('app_item_edit', {collectionId: collectionId, itemId: itemId}), attr: {'id': 'modalForm'}}) }}
{% else %}
    {{ form_start(form, {method: 'POST', action: path('app_item_add', {collectionId: collectionId}), attr: {'id': 'modalForm'}}) }}
{% endif %}
    <div class="row">
        <div class="col-12 mb-3">
            {{ form_row(form.name) }}
        </div>
        <div class="col-6 mb-3">
            {{ form_row(form.category) }}
        </div>
        <div class="col-6 mb-3">
            {{ form_row(form.reference) }}
        </div>
        {% if form.rarity is defined %}
            <div class="col-6 mb-3">
                {{ form_row(form.rarity) }}
            </div>
        {% endif %}
        <div class="col-6 mb-3">
            {{ form_row(form.price) }}
        </div>
        <div class="col-6 mb-3">
            {{ form_row(form.number) }}
        </div>
        <div class="col-12">
            {{ form_row(form.link) }}
        </div>
    </div>
{{ form_end(form) }}