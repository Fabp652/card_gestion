{% if itemId %}
    {{ form_start(form, {method: 'POST', action: path('app_item_edit', {collectionId: collectionId, itemId: itemId}), attr: {'id': 'modalForm', class: 'row'}}) }}
{% else %}
    {{ form_start(form, {method: 'POST', action: path('app_item_add', {collectionId: collectionId}), attr: {'id': 'modalForm', class: 'row'}}) }}
{% endif %}
    <div class="col-12 mb-3">
        {{ form_row(form.name) }}
    </div>
    {% if form.rarity is defined %}
        <div class="col-12 mb-3">
            {{ form_row(form.rarity) }}
        </div>
    {% endif %}
    <div class="col-6 mb-3">
        {{ form_row(form.category) }}
    </div>
    <div class="col-6 mb-3">
        {{ form_row(form.reference) }}
    </div>
    <div class="col-6 mb-3">
        {{ form_row(form.price) }}
    </div>
    <div class="col-6 mb-3">
        {{ form_row(form.number) }}
    </div>
    <div class="col-12">
        {{ form_row(form.link) }}
    </div>
{{ form_end(form) }}