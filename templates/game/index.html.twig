{% extends 'base.html.twig' %}

{% block title %}Gestion{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <h1 class="text-center my-5">Gestion des jeux</h1>
    </div>

    <div class="row mb-3 text-center">
        <h1>NOMBRE DE JEUX : {{total.total|format_number(locale='fr')}}</h1>
        <h1 class="text-success">MONTANT TOTAL : {{ total.totalAmount|format_currency('EUR', locale='fr') }}</h1>
    </div>

    <a href="{{ path('app_game_new') }}" class="btn btn-primary">Ajouter</a>
    
    {# Table #}
    <div class="row mt-2">
        <table class="col-12 table table-hover table-responsive text-center table-bordered border-black align-middle">
            <thead>
                <tr class="table-dark border-black">
                    <th>{{ knp_pagination_sortable(games, 'Nom', 'g.name', {class: 'link-light link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover'}) }}</th>
                    <th scope="col">Console</th>
                    <th>{{ knp_pagination_sortable(games, 'Prix', 'g.price', {class: 'link-light link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover'}) }}</th>
                    <th>{{ knp_pagination_sortable(games, 'Date', 'g.date', {class: 'link-light link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover'}) }}</th>
                    <th scope="col">Qualité</th>
                    <th style="width:10%;">{{ knp_pagination_sortable(games, 'Nombre', 'g.number', {class: 'link-light link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover'}) }}</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody class="table-group-divider">
                {% if games|length == 0 %}
                    <tr><td>Il n'y a pas de jeu.</td></tr>
                    {% else %}
                    {% for game in games %}
                    {% if 'bonne' in game.quality %}
                        {% set qualityBg = 'text-bg-success' %}
                    {% endif %}
                    {% if 'usée' in game.quality %}
                        {% set qualityBg = 'text-bg-warning' %}
                    {% endif %}
                    {% if 'abîmé' in game.quality %}
                        {% set qualityBg = 'text-bg-danger' %}
                    {% endif %}
                    {% if game.number > 1 %}
                        {% set rowBg = 'table-info border-black' %}
                        {% else %}
                            {% set rowBg = 'table-white' %}
                    {% endif %}
                    
                        <tr class="{{ rowBg }}">
                            <td>{{ game.name }}</td>
                            <td>{{ game.console }}</td>
                            <td style="width:5%;">{{ game.price }} €</td>
                            <td>{{ game.date|date('d/m/Y') }}</td>
                            <td class="{{ qualityBg }} text-wrap w-25">{{ game.quality }}</td>
                            <td>{{ game.number }}</td>
                            <td>
                                <a href="{{ path('app_game_update', {id: game.id}) }}" class="btn btn-primary btn-sm">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil" viewBox="0 0 16 16">
                                    <path d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325"/>
                                    </svg>
                                </a>
                                <a href="{{ path('delete_game', {id: game.id}) }}" class="btn btn-danger btn-sm">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                                    <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0z"/>
                                    <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4zM2.5 3h11V2h-11z"/>
                                    </svg>
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                {% endif %}
            </tbody>
        </table>

        <div class="navigation">
            {{ knp_pagination_render(games) }}
        </div>
    </div>
</div>
{% endblock %}