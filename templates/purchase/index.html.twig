{% extends 'base.html.twig' %}

{% block head %}
    {{ knp_pagination_rel_links(purchases) }}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('table') }}
    {{ encore_entry_link_tags('datepicker') }}
    {{ encore_entry_link_tags('select2') }}
{% endblock %}

{% block title %}Achats{% endblock %}

{% block body %}
    {{ parent() }}
    <div class="container-fluid mt-container mx-4" data-controller="datepicker">
        <div class="card h-100">
            <div class="card-header border-bottom-0 bg-white pb-0 px-0">
                <h1 class="text-center mb-5 fw-bold border-bottom border-2 pb-2">ACHATS</h1>
            </div>
            <div class="card-body">
                <div class="main-content">
                    <div class="row mb-3">
                        <div class="col-12 px-0">
                            <button
                                type="button"
                                class="btn btn-primary showModal"
                                data-url="{{ absolute_url(path('app_purchase_add')) }}"
                                data-title="Nouvel achat"
                            >
                                Nouvel achat
                            </button>
                        </div>
                    </div>
                    <div class="row">
                        <table class="col-12 table table-hover table-responsive text-center table-bordered border-black align-middle">
                            <thead class="table-dark border-dark">
                                <tr>
                                    <th>{{ knp_pagination_sortable(purchases, 'Nom', 'p.name', {class: 'link-light link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover'}) }}</th>
                                    <th>{{ knp_pagination_sortable(purchases, 'Prix', 'p.price', {class: 'link-light link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover'}) }}</th>
                                    <th>Commande</th>
                                    <th>Etat</th>
                                    <th>{{ knp_pagination_sortable(purchases, 'Pay√© le', 'p.buyAt', {class: 'link-light link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover'}) }}</th>
                                    <th>Lien</th>
                                    <th>Action</th>
                                </tr>
                                <tr>
                                    <form data-controller="filter" id="formFilter" action="{{ absolute_url(path('app_purchase_list')) }}" method="get">
                                        {% set filterQuery = request.query.all('filter') %}
                                        <th><input id="nameFilter" name="filter[name]" class="form-control input-table" type="text" value="{{ filterQuery.name ?? '' }}"></th>
                                        <th class="input-group">
                                            <input type="number" id="minPriceFilter" name="filter[min_price]" class="form-control input-table" placeholder="Min" value="{{ filterQuery.min_price ?? '' }}">
                                            <input type="number" id="maxPriceFilter" name="filter[max_price]" class="form-control input-table" placeholder="Max" value="{{ filterQuery.max_price ?? '' }}">
                                        </th>
                                        <th>
                                            <select id="orderFilter" name="filter[isOrder]" class="form-select input-table">
                                                <option value="">---</option>
                                                <option
                                                    value="0"
                                                    {% if filterQuery.isOrder is defined and filterQuery.isOrder == 0 %}
                                                        selected
                                                    {% endif %}
                                                >
                                                    Non
                                                </option>
                                                <option
                                                    value="1"
                                                    {% if filterQuery.isOrder is defined and filterQuery.isOrder == 1 %}
                                                        selected
                                                    {% endif %}
                                                >
                                                    Oui
                                                </option>

                                            </select>
                                        </th>
                                        <th>
                                            <select id="stateFilter" name="filter[state]" class="form-select input-table">
                                                <option value="">---</option>
                                                {% for stateKey, stateValue in states %}
                                                    <option
                                                        value="{{ stateKey }}"
                                                        {% if filterQuery.state is defined and filterQuery.state == stateKey %}
                                                            selected
                                                        {% endif %}
                                                    >
                                                        {{ stateValue }}
                                                    </option>
                                                {% endfor %}
                                            </select>
                                        </th>
                                        <th class="input-group">
                                            <input type="text" id="minBuyAtFilter" name="filter[min_buyAt]" class="form-control input-table startDate" placeholder="Min" value="{{ filterQuery.min_buyAt ?? '' }}">
                                            <input type="text" id="maxBuyAtFilter" name="filter[max_buyAt]" class="form-control input-table endDate" placeholder="Max" value="{{ filterQuery.max_buyAt ?? '' }}">
                                        </th>
                                        <th></th>
                                        <th>
                                            <a href="{{ path('app_purchase_list') }}" class="btn btn-secondary btn-sm rounded-0">
                                                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-x-lg" viewBox="0 0 16 16">
                                                    <path d="M2.146 2.854a.5.5 0 1 1 .708-.708L8 7.293l5.146-5.147a.5.5 0 0 1 .708.708L8.707 8l5.147 5.146a.5.5 0 0 1-.708.708L8 8.707l-5.146 5.147a.5.5 0 0 1-.708-.708L7.293 8z"/>
                                                </svg>
                                            </a>
                                        </th>
                                    </form>
                                </tr>
                            </thead>
                            <tbody class="table-group-divider">
                                {% for purchase in purchases %}
                                    <tr>
                                        <td>{{ purchase.name }}</td>
                                        <td>{{ purchase.price|format_currency('EUR', locale='fr') }}</td>
                                        <td>{{ purchase.isOrder ? 'Oui' : 'Non' }}</td>
                                        <td>
                                            {% set state = '' %}
                                            {% set iPReceivedLength = purchase.itemsPurchase|filter(v => v.received)|length %}
                                            {% if not purchase.isValid %}
                                                {% set state = states|find((v, k) => k == 0) %}
                                                {% set bg = 'text-bg-dark' %}
                                            {% elseif not purchase.received and not purchase.refundRequest and iPReceivedLength == 0 %}
                                                {% if purchase.isValid %}
                                                    {% set state = states|find((v, k) => k == 1) %}
                                                    {% set bg = 'text-bg-secondary' %}
                                                {% else %}
                                                    
                                                {% endif %}
                                            {% else %}
                                                {% set iPRefundedLength = purchase.itemsPurchase|filter(v => v.refunded)|length %}
                                                {% if purchase.refundRequest and not purchase.refunded and iPRefundedLength == 0 %}
                                                    {% set state = states|find((v, k) => k == 2) %}
                                                    {% set bg = 'text-bg-danger' %}
                                                {% elseif (iPRefundedLength > 0 and iPRefundedLength < purchase.itemsPurchase|length) or (iPReceivedLength > 0 and iPReceivedLength < purchase.itemsPurchase|length) %}
                                                    {% if iPRefundedLength > 0 and iPRefundedLength < purchase.itemsPurchase|length %}
                                                        {% set state = states|find((v, k) => k == 3) %}
                                                    {% else %}
                                                        {% set state = states|find((v, k) => k == 5) %}
                                                    {% endif %}
                                                    {% set bg = 'text-bg-warning' %}
                                                {% else %}
                                                    {% if purchase.refunded %}
                                                        {% set state = states|find((v, k) => k == 4) %}
                                                    {% else %}
                                                        {% set state = states|find((v, k) => k == 6) %}
                                                    {% endif %}
                                                    {% set bg = 'text-bg-success' %}
                                                {% endif %}
                                            {% endif %}
                                            <span class="badge rounded-pill {{ bg }}">{{ state }}</span>
                                        </td>
                                        <td>
                                            {% if purchase.buyAt %}
                                                {{ purchase.buyAt|format_datetime('short', 'none', locale: 'fr') }}
                                            {% endif %}
                                        </td>
                                        <td>
                                            <a href="{{ purchase.link }}" target="_blank" class="btn btn-outline-primary btn-sm">
                                                <i class="fa-solid fa-link"></i>
                                            </a>
                                        </td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                {% if purchase.isValid %}
                                                    <a class="btn btn-outline-primary btn-sm" href="{{ path('app_purchase_view', {purchaseId: purchase.id}) }}">
                                                        <i class="fa-solid fa-eye"></i>
                                                    </a>
                                                {% else %}
                                                    <a class="btn btn-primary btn-sm" href="{{ path('app_purchase_edit', {purchaseId: purchase.id}) }}">
                                                        <i class="fa-solid fa-pen"></i>
                                                    </a>
                                                {% endif %}
                                                <button
                                                    type="button"
                                                    class="btn btn-sm btn-primary showModal"
                                                    data-url="{{ absolute_url(path('app_file_upload', {entityName: 'purchase', entityId: purchase.id})) }}"
                                                    data-title="Ticket/Facture"
                                                >
                                                    <i class="fa-solid fa-file"></i>
                                                </button>
                                                <a href="{{ path('app_purchase_delete', {purchaseId: purchase.id}) }}" class="btn btn-danger btn-sm removeElement" data-sweetAlert-title="Suppression de l'achat" data-sweetAlert-text="Voulez-vous supprimer cet achat : {{ purchase.name|lower }} ?">
                                                    <i class="fa-solid fa-trash-can"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                {% else %}
                                    <tr><td colspan="7"><b class="text-danger fs-1">AUCUN ACHAT DISPONNIBLE !</b></td></tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    <div class="navigation">
                        {{ knp_pagination_render(purchases) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
    {% include "Modal/modal.html.twig" %}
{% endblock %}
