{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('table') }}
    {% if not purchase.isValid %}
        {{ encore_entry_link_tags('datepicker') }}
        {{ encore_entry_link_tags('select2') }}
    {% endif %}
{% endblock %}

{% block title %}{{ purchase.name }}{% endblock %}

{% block body %}
    {{ parent() }}
    <div class="container-fluid mt-container mx-4" {% if not purchase.isValid %}data-controller="form select calculate-price"{% endif %}>
        <div class="card h-100">
            <div class="card-header border-2 bg-black bg-gradient px-0">
                <h1 class="text-center fw-bold color-title">{{ purchase.name|upper }}</h1>
            </div>
            <div class="card-body">
                <div class="main-content">
                    {% if not purchase.isValid %}
                        <div class="row card">
                            <div class="card-body">
                                {{ form_start(form, {method: 'POST', action: path('app_purchase_edit', {purchaseId: purchase.id})}) }}
                                    <div class="col-6">
                                        {{ form_row(form.name) }}
                                        {{ form_row(form.link) }}
                                        {{ form_row(form.buyAt) }}
                                        {{ form_row(form.isOrder) }}
                                    </div>
                                {{ form_end(form) }}
                                {# <div class="col-6">
                                </div> #}
                            </div>
                        </div>
                    {% endif %}
                    <div class="row mt-2">
                        <table class="col-12 table table-responsive text-center table-bordered border-black align-middle">
                            <thead class="table-dark border-dark">
                                <tr>
                                    <th style="width:40%;">Nom</th>
                                    <th>Prix</th>
                                    <th>Quantit√©</th>
                                    {% if purchase.isValid %}
                                        <th>Etat</th>
                                    {% endif %}
                                    <th>Lien</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody class="table-group-divider" {% if not purchase.isValid %}data-url="{{ absolute_url(path('app_item_search')) }}" id="selectParent"{% endif %}>
                                {{ render(path('app_item_purchase_list', {purchaseId: purchase.id, form: 1})) }}
                                <tr>
                                    <td colspan="5">
                                        <button class="btn btn-primary" id="newLine" data-url="{{ absolute_url(path('app_item_purchase_add', {purchaseId: purchase.id}))}}"><i class="fa-solid fa-plus"></i></button>
                                    </td>
                                </tr>
                            </tbody>
                            <tfoot>
                                <tr class="fs-5">
                                    <td colspan="3" class="text-end table-dark"><b>TOTAL</b></td>
                                    <td colspan="2"><b class="text-success" id="totalPrice">{{ purchase.price|format_currency('EUR', locale='fr') }}</b></td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}