{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('table') }}
        {{ encore_entry_link_tags('datepicker') }}
    {% if not purchase.isValid %}
        {{ encore_entry_link_tags('select2') }}
    {% endif %}
{% endblock %}

{% block title %}{{ purchase.name }}{% endblock %}

{% block body %}
    {{ parent() }}
    <div class="container-fluid mt-container mx-4" {% if not purchase.isValid %}data-controller="form select calculate-price datepicker"{% endif %}>
        <div class="card h-100">
            <div class="card-header border-2 bg-black bg-gradient px-0">
                <h1 class="text-center fw-bold color-title">{{ purchase.name|upper }}</h1>
            </div>
            <div class="card-body">
                <div class="main-content">
                    {% if not purchase.isValid %}
                        <div class="row border-bottom pb-3">
                            {{ form_start(form, {method: 'POST', action: path('app_purchase_edit', {purchaseId: purchase.id}), attr: {class: 'd-flex justify-content-between', id: 'formUpdate'}}) }}
                                <div class="col-5">
                                    {{ form_row(form.name, {id: 'update_name'}) }}
                                    {{ form_row(form.market, {id: 'update_market'}) }}
                                    {{ form_row(form.link, {id: 'update_link'}) }}
                                </div>
                                <div class="col-5">
                                    {{ form_row(form.buyAt, {id: 'update_buyAt'}) }}
                                    {{ form_row(form.isOrder, {id: 'update_isOrder'}) }}
                                </div>
                            {{ form_end(form) }}
                        </div>
                    {% else %}
                        <div class="row border-bottom pb-3 justify-content-center">
                            <div class="col-5">
                                <dl class="row">
                                    <dt class="col-6">Magasin</dt>
                                    <dd class="col-6">
                                        {% if purchase.market %}
                                            {% if purchase.market.link %}
                                                <a href="{{ purchase.market.link }}">{{ purchase.market.name }}</a>
                                            {% else %}
                                                {{ purchase.market.name }}
                                            {% endif %}
                                        {% else %}
                                            Non renseigné
                                        {% endif %}
                                    </dd>

                                    <dt class="col-6">Lien de l'achat</dt>
                                    <dd class="col-6">
                                        {% if purchase.link %}
                                            <a href="{{ purchase.link }}" target="_blank" class="btn btn-outline-primary btn-sm">
                                                <i class="fa-solid fa-link"></i>
                                            </a>
                                        {% else %}
                                            Pas de lien
                                        {% endif %}
                                    </dd>
                                </dl>
                            </div>
                            <div class="col-5">
                                <dl class="row">
                                    <dt class="col-6">Date d'achat</dt>
                                    <dd class="col-6">{{ purchase.buyAt|format_datetime('short', 'none', locale: 'fr') }}</dd>

                                    <dt class="col-6">C'est une commande</dt>
                                    <dd class="col-6">
                                        {% if purchase.isOrder %}
                                            <i class="fa-solid fa-square-check"></i>
                                        {% else %}
                                            <i class="fa-solid fa-square-xmark"></i>
                                        {% endif %}
                                    </dd>
                                </dl>
                            </div>
                        </div>
                    {% endif %}
                    <div class="row mt-4">
                        <div class="col-12 mb-3 d-flex justify-content-end p-0">
                            <div class="btn-group">
                                {% if not purchase.isValid %}
                                    <a class="btn btn-success" href="{{ absolute_url(path('app_purchase_validate', {purchaseId: purchase.id})) }}">
                                        Valider
                                    </a>
                                {% else %}
                                    {% if not purchase.received and not purchase.refundRequest %}
                                        <button
                                            class="btn btn-success showModal"
                                            data-title="Réception de la commande entière"
                                            data-class="received"
                                            data-submit-url="{{ absolute_url(path('app_purchase_state', {purchaseId: purchase.id})) }}"
                                            data-state="received"
                                        >
                                            Tous les objets reçus
                                        </button>
                                    {% endif %}
                                    {% if not purchase.refundRequest %}
                                        <button
                                            class="btn btn-outline-danger showModal"
                                            data-title="Remboursement de toute la commande"
                                            data-class="refundRequest"
                                            data-submit-url="{{ absolute_url(path('app_purchase_state', {purchaseId: purchase.id})) }}"
                                            data-state="refundRequest"
                                        >
                                            Remboursement de la commande
                                        </button>
                                    {% elseif not purchase.refunded %}
                                        <button
                                            class="btn btn-success showModal"
                                            data-title="Commande remboursée"
                                            data-class="refunded"
                                            data-submit-url="{{ absolute_url(path('app_purchase_state', {purchaseId: purchase.id})) }}"
                                            data-state="refunded"
                                        >
                                            Commande remboursée
                                        </button>
                                    {% endif %}
                                {% endif %}
                                <a class="btn btn-danger removeElement" href="{{ absolute_url(path('app_purchase_delete', {purchaseId: purchase.id})) }}" data-sweetAlert-title="Suppression de l'achat" data-sweetAlert-text="Voulez-vous supprimer cet achat : {{ purchase.name|lower }} ?">
                                    Supprimer
                                </a>
                            </div>
                        </div>
                        <table class="col-12 table table-responsive text-center table-bordered border-black align-middle">
                            <thead class="table-dark border-dark">
                                <tr>
                                    <th style="width:40%;">Nom</th>
                                    <th>Prix</th>
                                    <th>Quantité</th>
                                    {% if purchase.isValid %}
                                        <th>Etat</th>
                                    {% endif %}
                                    <th>Lien</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody class="table-group-divider" {% if not purchase.isValid %}data-url="{{ absolute_url(path('app_item_search')) }}" id="selectParent"{% endif %}>
                                {{ render(path('app_item_purchase_list', {purchaseId: purchase.id, form: not purchase.isValid})) }}
                                {% if not purchase.isValid %}
                                    <tr>
                                        <td colspan="5">
                                            <button class="btn btn-primary" id="newLine" data-url="{{ absolute_url(path('app_item_purchase_add', {purchaseId: purchase.id}))}}"><i class="fa-solid fa-plus"></i></button>
                                        </td>
                                    </tr>
                                {% endif %}
                            </tbody>
                            <tfoot>
                                <tr class="fs-5">
                                    <td colspan="{{ not purchase.isValid ? 3 : 4 }}" class="text-end table-dark"><b>TOTAL</b></td>
                                    <td colspan="2"><b class="text-success" id="totalPrice">{{ purchase.price|format_currency('EUR', locale='fr') }}</b></td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {% if purchase.isValid %}
        {% include "Modal/modal.html.twig" with {receivedOrRefund: true} %}
    {% endif %}
{% endblock %}