<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
            <script src="https://kit.fontawesome.com/9f4d626518.js" crossorigin="anonymous"></script>
        {% endblock %}
    </head>
    <body class="bg-light">
        {% block body %}
                <nav class="navbar border-bottom bg-white px-2 fixed-top justify-content-center" data-controller="global">
                    {% if collection is defined %}
                        <div class="position-absolute start-0 top-50 translate-middle-y justify-content-around d-flex">
                            <button class="navbar-toggler rounded-0 ms-3" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasNavbar" aria-controls="offcanvasNavbar" aria-label="Toggle navigation">
                                <span class="navbar-toggler-icon"></span>
                            </button>
                            {{ render(path('app_collection_dropdown', {collectionId: collection.id})) }}
                        </div>
                        <div class="offcanvas offcanvas-start" tabindex="-1" id="offcanvasNavbar" aria-labelledby="offcanvasNavbarLabel">
                            <div class="offcanvas-header border-bottom bg-black bg-gradient" data-bs-theme="dark">
                                <h5 class="offcanvas-title fw-bold color-title" id="offcanvasNavbarLabel">CATÉGORIES</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
                            </div>
                            <div class="offcanvas-body px-0">
                                {{ render(path('app_category_nav', {collectionId: collection.id, categoryId: collection.category.id})) }}
                            </div>
                        </div>
                    {% endif %}
                    <form id="searchForm" class="w-50 d-flex justify-content-center" role="search" action="{{ path('app_item_search') }}" method="GET">
                        <div class="w-75 position-relative">
                            <input id="search" class="form-control rounded-0 border-dark" type="search" name="search" placeholder="Rechercher" aria-label="Rechercher">
                            <ul id="searchResult" class="list-result position-absolute top-100 start-0 end-0 z-3 p-0 overflow-y-scroll border border-black bg-white" style="display:none;">
                            </ul>
                        </div>
                        <button class="btn btn-outline-dark rounded-0" type="submit">
                            <i class="fa-solid fa-magnifying-glass"></i>
                        </button>
                    </form>
                </nav>
            {% if collection is defined or category is defined or item is defined %}
                <nav class="ms-4 mb-5 breadcrumb-position" style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
                    <ol class="breadcrumb fw-semibold">
                        <li class="breadcrumb-item">
                            <a
                                class="link-offset-2-hover link-underline link-underline-opacity-0 link-underline-opacity-75-hover"
                                href="{{ path('app_collection') }}"
                            >
                                Accueil
                            </a>
                        </li>
                        {% if (category is defined and collection is defined) or item is defined %}
                            {% if item is defined %}
                                {% set collection = item.collection %}
                            {% endif %}
                            <li class="breadcrumb-item">
                                <a
                                    class="link-offset-2-hover link-underline link-underline-opacity-0 link-underline-opacity-75-hover"
                                    href="{{ path('app_collection_view', {collectionId: collection.id}) }}"
                                >
                                    {{ collection.name }}
                                </a>
                            </li>
                            {% if item is defined %}
                                <li class="breadcrumb-item">
                                    <a 
                                        class="link-offset-2-hover link-underline link-underline-opacity-0 link-underline-opacity-75-hover"
                                        href="{{ path('app_item_list', {collectionId: collection.id, categoryId: item.category.id}) }}"
                                    >
                                        {{ item.category.name }}
                                    </a>
                                </li>
                                <li class="breadcrumb-item active" aria-current="page">{{ item.name }}</li>
                            {% else %}
                                <li class="breadcrumb-item active" aria-current="page">{{ category.name }}</li>
                            {% endif %}
                        {% elseif category is defined %}
                            <li class="breadcrumb-item active" aria-current="page">{{ category.name }}</li>
                        {% else %}
                            <li class="breadcrumb-item active" aria-current="page">{{ collection.name }}</li>
                        {% endif %}
                    </ol>
                </nav>
            {% endif %}
        {% endblock %}
    </body>
</html>
