<div class="dropdown ms-5">
    <button  class="btn btn-outline-primary dropdown-toggle text-start" role="button" data-bs-toggle="dropdown" aria-expanded="false" style="width:200px;">
        {{actualCollection.name}}
    </button >

    <ul class="dropdown-menu w-100 rounded-0 p-0">
        {% for collection in collections %}
            <li><a class="dropdown-item" href="{{ path('app_collection_view', {collectionId: collection.id}) }}">{{ collection.name }}</a></li>
        {% endfor %}
    </ul>
</div>