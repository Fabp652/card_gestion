<div class="modal fade" id="modal" tabindex="-1" aria-labelledby="modalTitle" aria-hidden="true" data-controller="modal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header bg-black bg-gradient" data-bs-theme="dark">
        <h5 class="modal-title color-title text-uppercase" id="modalTitle"></h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body" id="modalBody">
        {% if receivedOrRefund is defined and receivedOrRefund %}
          {% include "Modal/partial/_received_or_refund_form.html.twig" %}
        {% endif %}
      </div>
      <div class="modal-footer border-top-0">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
        <button type="button" class="btn btn-primary" id="modalSubmit">Enregistrer</button>
      </div>
    </div>
  </div>
</div>